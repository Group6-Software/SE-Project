<h1>Welcome to my Website</h1>

<div>
    
<% if employee_signed_in? %>

  <li>
  <%= link_to('Edit registration', edit_employee_registration_path) %>
  </li>

  <li>
  <%= link_to('View customer orders', customer_orders_path)  %>
  </li>

  <li>
  <%= link_to('Logout', destroy_employee_session_path, :method => :delete) %>        
  </li>

<% else %>

  <li>
  <%= link_to('Login as an Employee', new_employee_session_path)  %>  
  </li>
<% end %>


<% if current_user %>

  <li>
  Signed in as <strong><%= current_user.name %></strong>!
  <%= link_to "Sign out", signout_path, id: "sign_out" %>
  </li>

<% else %>

  <li>
  <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
  <li>

<% end %>
      
</div>